<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ListView
        android:id="@+id/themesListView"
        android:layout_width="228dp"
        android:layout_height="230dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="50dp"
        android:soundEffectsEnabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/greetUserText">


    </ListView>

    <Button
        android:id="@+id/newUserButton"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="48dp"
        android:background="@drawable/round"
        android:fontFamily="@font/firasans_bold"
        android:onClick="openNewUserActivity"
        android:text="Aloita"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/greetUserText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/resetPrefsButton"
        android:layout_width="96dp"
        android:layout_height="58dp"
        android:onClick="resetPrefs"
        android:text="@string/resetPrefsButton"
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.952"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/greetUserText"
        android:layout_width="137dp"
        android:layout_height="79dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="25dp"
        android:fontFamily="@font/firasans_bold"
        android:text="Moi käyttäjä"
        android:textAlignment="center"
        android:textColor="#964B9D"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/themesListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newUserButton" />
</androidx.constraintlayout.widget.ConstraintLayout>