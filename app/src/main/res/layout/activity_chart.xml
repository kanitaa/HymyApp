<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChartActivity">

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/rounded_corners"
        android:onClick="setChart"
        android:text="DATACHART"
        app:backgroundTint="@color/violet" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart"
        android:layout_width="match_parent"
        android:layout_height="633dp"
        android:layout_marginTop="100dp">

    </com.github.mikephil.charting.charts.BarChart>

    <TextView
        android:id="@+id/scoreText"
        android:layout_width="212dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="42dp"
        android:fontFamily="@font/firasans_regular"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="206dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="9dp"
        android:fontFamily="@font/firasans_bold"
        android:text="PELI LÃ„PI!!"
        android:textAlignment="center"
        android:textColor="@color/violet"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/statementView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:fontFamily="@font/firasans_regular"
        android:text="TextView"
        android:textColor="@color/pink" />

</RelativeLayout>